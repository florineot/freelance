%p{id:"notice"}= notice

%h1= @project.title
.label
  %author= @project.camrade.name
  |
  %time= @project.created_at.strftime("%M:%H %d.%m.%Y")

.main_content= @project.description

%fieldset
  %legend Необходимое количество участников
  Всего: 
  = @project.camrade_count
  
  Запасных:
  = @project.reserve_count


%fieldset
  %legend Временные рамки проекта
  = humanize_date_range @project.datetime_start, @project.datetime_end

%fieldset
  %legend Необходимые профессиональные навыки участников
  - if @project.scopes.blank?
    Нет ограничений
  -else
    - @scope_specs.each do |scope_id, scope_name_spec|
      %div{id: "project_scope_#{scope_id}"}
        %strong= scope_name_spec[0]
        %br
        - scope_name_spec[1].each do |spec|
          %div{id: "project_specialization_#{spec[0]}"}
            = spec[1]
            %br

/ %p
/   <b>Completed:
/   = @project.completed
/ 
/ 
/ %p
/   <b>Country:
/   = @project.country_id
/ 
/ 
/ %p
/   <b>City:
/   = @project.city_id
/ 
/ 
/ %p
/   <b>Camrade:
/   = @project.camrade_id
/ 


= link_to 'Edit', edit_project_path(@project) |
= link_to 'Back', projects_path
